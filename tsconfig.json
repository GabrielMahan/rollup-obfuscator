{
    "compilerOptions": {
        "target": "ES2021",
        "module": "es2022",
        "lib": ["ES2021"],

        "strict": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"]
}